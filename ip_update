#!/bin/bash 

############################################################################# 
# Source files
#############################################################################

source ~/.bash_profile
source includes/config
source includes/functions


############################################################################# 
# Check usage
#############################################################################

#Usage check
: ${1?"Usage: $0 SITE"}

cd $(drush @$1 dd)

if [ -n "$2" ] && [ "$2" = "dev" ]; then
	git co master
fi

git pull

drush @$1 updb -y