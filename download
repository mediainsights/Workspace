#!/bin/bash 

############################################################################# 
# Source files
#############################################################################

source ~/.bash_profile
source includes/config
source includes/functions

############################################################################# 
# Check usage
#############################################################################

#Usage check
: ${1?"Usage: $0 SITE [live | dev]"}

./startup $1


#Check remote status
status=$(drush @$1.$2 status|grep "Drupal bootstrap"|awk '{ print $4 }')
if [ "$status" != "Successful" ]; then
	echo @$1.$2 cannot be detected. Removing $1.localhost now
	
	./destroy $1
	
	exit
fi


drush rsync @$1.$2 @$1 -y 

drush @$1.$2 sql-drop -y	
drush sql-sync @$1 @$1.$2 --no-cache -y
