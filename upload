#!/bin/bash 

############################################################################# 
# Source files
#############################################################################

source ~/.bash_profile
source includes/config
source includes/functions

############################################################################# 
# Check usage
#############################################################################

#Usage check
: ${1?"Usage: $0 SITE [live | dev]"}

#Check lcoal status
loc_status=$(drush @$1 status|grep "Drupal bootstrap"|awk '{ print $4 }')

if [ "$loc_status" != "Successful" ]; then
	echo site $1 not found.
	exit
fi
	
#Check remote status
status=$(drush @$1.$2 status|grep "Drupal bootstrap"|awk '{ print $4 }')
if [ "$status" = "Successful" ]; then
	echo Drupal site found on @$1.$2, please use drush command instead.
	exit
fi


if [ $2 = dev ]; then 
	sed 's/_db/_dev/' $WWW/$1/sites/default/settings.php > $WWW/$1/sites/default/settings.dev
	sudo mv $WWW/$1/sites/default/settings.dev $WWW/$1/sites/default/settings.php
	
fi

drush rsync --include-conf @$1 @$1.$2 -y 

drush @$1.$2 sql-drop -y	
drush sql-sync @$1 @$1.$2 --no-cache -y


if [ $2 = dev ]; then 
	sed 's/_dev/_db/' $WWW/$1/sites/default/settings.php > $WWW/$1/sites/default/settings.local
	sudo mv $WWW/$1/sites/default/settings.local $WWW/$1/sites/default/settings.php
fi